            function Suma(liczbPierwsza, liczbaDruga)
            {
                var wynik;
                wynik = liczbPierwsza + liczbaDruga;
                return wynik;
            }

            var wynikFunkcji = Suma(15, 6);
            document.writeln(wynikFunkcji);
            document.writeln("<br/>");

            function Odejmowanie(liczbPierwsza, liczbaDruga)
            {
                var wynik;
                wynik = liczbPierwsza - liczbaDruga;
                return wynik;
            }

            var wynikFunkcji = Odejmowanie(15, 6);
            document.writeln(wynikFunkcji);
            document.writeln("<br/>");


